%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, style: :horizontal, left: "col-sm-3", right: "col-sm-7") do |f|
        %header.col-sm-offset-1
          %h1 Register
        = f.alert_message "Please fix the errors below."
        %fieldset
          .col-sm-5
            = f.text_field :email, label: "Email Address"
            = f.password_field :password
            = f.text_field :name, label: "Full Name"
            = f.hidden_field :invite_token
        %fieldset.actions.control-group
          .col-sm-5
            .controls
              - value = @user.new_record? ? 'Sign Up' : 'Update Account'
              %input{type: "submit", class: "btn btn-default", value: "#{value}"}