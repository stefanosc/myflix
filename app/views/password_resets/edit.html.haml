%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag(url: update_password_reset_path, method: :patch, style: :horizontal, left: "col-sm-3", right: "col-sm-7") do |f|
        %header.col-sm-offset-1
          %h1 Password Reset
        %fieldset
          .col-sm-4
            = f.password_field :password
        %fieldset.actions.control-group
          .controls.col-sm-4
            %input{type: "submit", class: "btn btn-default", value: "Update Password"}