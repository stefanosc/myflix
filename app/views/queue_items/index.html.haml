%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do |q_item|
              %tr
                %td
                  %input.form-control(type="text" value=#{q_item.position})
                %td
                  = link_to "#{item.video.title}", q_item.video
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = q_item.video.reviews.first.rating
                %td
                  = link_to "#{q_item.video.category.name}", q_item.video.category
                %td
                  = link_to "", method: :post do
                    %i.glyphicon.glyphicon-remove

        = button_to "Update Instant Queue", nil, class: "btn btn-default"
